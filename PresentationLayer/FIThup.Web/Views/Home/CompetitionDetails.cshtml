@model ViewModel.CompetitionDetailsViewModel
@{
    ViewBag.Title = "CompetitionDetails";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
    var count = 0;
    var firstpart = "";
    var Midpart = "";
    var Endpart = "";
    /////////////////////////////////////
    string FirstPlaceTeamName = ""; string SecondPlaceTeamName = ""; string ThirdPlaceTeamName = "";



}

<div class="hero-4 ">

    <div class="hero-4__content bg-black rounded-top-5 section-space-top">
        <div class="section-space-top section-space-sm-bottom">
            <div class="section-space-sm-bottom">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-xl-10">
                            <h2 class="mb-6 text-center clr-white fw-extrabold animate-line-3d" style="perspective: 400px;">
                                @{

                                    foreach(var i in Model.CompetitonDetails.FirstOrDefault().CompetitionTitle)
                                    {
                                        if(i == ' ')
                                        {
                                            count++;
                                        }
                                    }
                                    if(count == 0)
                                    {
                                        firstpart = Model.CompetitonDetails.FirstOrDefault().CompetitionTitle;
                                    }else if(count == 1)
                                    {
                                        int flag = 0;
                                        foreach (var i in Model.CompetitonDetails.FirstOrDefault().CompetitionTitle)
                                        {
                                            if(i != ' ' && flag == 0)
                                            {
                                                firstpart += i;
                                            }
                                            else if (i == ' ')
                                            {
                                                flag = 1;
                                            }
                                            else
                                            {
                                                Endpart += i;
                                            }

                                        }

                                    }
                                    else if (count >= 2)
                                    {
                                        int flag = 0;
                                        int count2 = 1;
                                        foreach (var i in Model.CompetitonDetails.FirstOrDefault().CompetitionTitle)
                                        {
                                            if (i != ' ' && flag == 0)
                                            {
                                                firstpart += i;

                                            }
                                            else if(i == ' ' && flag == 0)
                                            {
                                                flag = 1 ;
                                            }
                                            else if( count2!=count ){
                                                Midpart += i;
                                                if(i == ' ')
                                                {
                                                    count2++;
                                                }
                                            }
                                            else if(count2 == count)
                                            {
                                                Endpart += i;
                                            }

                                        }

                                    }


                                }
                                <span class="d-inline-block gradient-flow gradient-flow--start"> @firstpart </span> <!--Creation &amp; Customer Experience --> @Midpart <span class="d-inline-block gradient-flow gradient-flow--end"><!-- Platform --> @Endpart</span>
                            </h2>

                            <p class="mb-0 text-center fw-extrabold ff-1 fs-18 clr-white animate-line-3d" style="perspective: 400px;">

                                    <span class="clr-secondary-key fw-bold mb-2 d-inline-block">@Model.CompetitonDetails.FirstOrDefault().CompetitionVersion</span>
                                
                                <span class="clr-grad-6 clr-secondary-key fw-bold mb-2 " style="margin: 0 auto;display: table;">@Model.CompetitonDetails.FirstOrDefault().ClubHistoryID</span>
                            </p>
                            <ul class="list list-row gap-5 mt-6" style="margin: auto;padding: 0;display: table;">
                                <li class="fs-14 clr-neutral-80 d-flex gap-2">
                                    <i class="bi bi-calendar2-date"></i> <!--Updated On October--> @Model.CompetitonDetails.FirstOrDefault().CompetitionDateTime
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row g-4">
                    <div class="col-12">
                        <div class="top-shadow section-space-sm-y rounded-4 bg-black position-relative z-1 overflow-hidden fadeIn_bottom" style="translate: none;rotate: none;scale: none;transform: translate(0px, 0px);opacity: 1;width: 800px;/* padding: 100px; */margin: 0 auto;padding-right: 120px;padding-left: 120px;">
                            <div class="row g-4 align-items-center" style="
">

                                <div class="col-md-6 col-xl-7" style="
    width: -webkit-fill-available;
">
                                    <div class="text-center">
                                        <img src="/img/@Model.CompetitonDetails.FirstOrDefault().MainCompetitonImage" alt="image" class="img-fluid" style="
">
                                    </div>
                                </div>
                            </div>
                            <img src="/img/hero-4-content-shape.webp" alt="image" class="w-100 h-100 position-absolute inset-0 z-n1 pointer-none">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
